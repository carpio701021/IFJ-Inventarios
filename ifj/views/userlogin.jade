extends layout

block content
	div(align='center')
		h1= title

	section.loginform.cf
		form(name='login', action='/login/verify', method='POST', accept-charset='utf-8')
			ul
				li
					label(for='c_empresa') Codigo Empresa
					input(type='number', name='c_empresa', placeholder='empresa', required='')
					
				li
					label(for='c_user') Codigo Usuario
					input(type='number', name='c_user', placeholder='usuario', required='')
					
				li
					label(for='password') Contraseña
					input(type='password', name='password', placeholder='contraseña', required='')
					
				li
					div(align='center')
						input(type='submit', value='Ingresar',)
